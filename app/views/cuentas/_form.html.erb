<%= form_for @cuenta, :url => cuentas_path, :html => {:class => "form-horizontal"} do |f| %>
  <% if @cuenta.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h2><%= @cuenta.errors.count %> Errores impidieron que esta cuenta se guardara:</h2>
      <ul>
       <% @cuenta.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="row">
    <div class="form-group">
      <%= f.label :email, :class => "col-xs-3 control-label" %>
      <div class="col-xs-7">
        <%= f.email_field :email, :class => "form-control" , :autofocus => true%>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password, :class => "col-xs-3 control-label" %>
      <div class="col-xs-7">
        <%= f.password_field :password, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, :class => "col-xs-3 control-label" %>
      <div class="col-xs-7">
        <%= f.password_field :password_confirmation, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :role_id, :class => "col-xs-3 control-label" %>
      <div class="col-xs-7">
        <select id="user_role" name="user[role_id]" class="form-control">
          <option value="2">Tecnico (atiende ordenes)</option>
          <option value="3">Lector (solo lectura)</option>
          <option value="4">Reporta (puede generar ordenes)</option>
        </select>
      </div>
    </div>
  </div>
  
  <div class="row">
    <br />
    <button type="submit" class="btn btn-default center-block">
      <span class="glyphicon glyphicon-save"></span> Guardar
    </button>
  </div>
<% end %>
