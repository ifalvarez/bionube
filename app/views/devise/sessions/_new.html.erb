<%= form_for(:user, :url => '/users/sign_in', 
	:html => {:class => 'navbar-form navbar-right', :role => 'form'}) do |f| %>
  	
  	<div class="form-group">
	  <%= f.text_field :email, :class => 'form-control', :placeholder => "Email" %>
	</div>
	<div class="form-group">
	  <%= f.password_field :password, :class => 'form-control', :placeholder => "Password" %>
	</div>
	<button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-log-in"></span> Ingresar</button>
<% end %>




