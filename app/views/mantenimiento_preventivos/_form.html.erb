<%= form_for([@equipo, @mantenimiento_preventivo]) do |f| %>
  <% if @mantenimiento_preventivo.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
			<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      		<h2><%= @mantenimiento_preventivo.errors.count %> Errores impidieron que este equipo se guardara:</h2>
			<ul>
		    	<% @mantenimiento_preventivo.errors.full_messages.each do |msg| %>
		        	<li><%= msg %></li>
		      	<% end %>
      		</ul>
    	</div>
  <% end %>
  <div class="row">
		<ul class="nav nav-tabs">
			<li><%= link_to "Hoja de vida", @equipo %></li>
			<li class="active"><%= link_to "Mantenimiento", equipo_mantenimiento_preventivos_path(@equipo) %></li>
			<li><a href="#">Metrolog√≠a</a></li>
		</ul>
		<br />
	</div>

  <div class="field">
    <%= f.label :fecha %><br>
    <%= f.date_select :fecha %>
  </div>
  <div class="field">
    <%= f.label :reporte %><br>
    <%= f.text_area :reporte %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
