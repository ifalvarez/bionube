<%= form_for([@equipo, @metrologia]) do |f| %>
  <% if @metrologia.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
			<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      		<h2><%= @metrologia.errors.count %> Errores impidieron que esta metrologia se guardara:</h2>
			<ul>
		    	<% @metrologia.errors.full_messages.each do |msg| %>
		        	<li><%= msg %></li>
		      	<% end %>
      		</ul>
    	</div>
  <% end %>
  <div class="row">
		<ul class="nav nav-tabs">
			<li><%= link_to "Hoja de vida", @equipo %></li>
			<li><%= link_to "Mantenimiento", equipo_mantenimiento_preventivos_path(@equipo) %></li>
			<li class="active"><%= link_to "Metrologia", equipo_metrologias_path(@equipo) %></li>
		</ul>
		<br />
	</div>

  <div class="field">
    <%= f.label :fecha %><br>
    <%= f.date_select :fecha %>
  </div>
  <div class="field">
    <%= f.label :reporte %><br>
    <%= f.text_area :reporte, :autofocus => true %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
