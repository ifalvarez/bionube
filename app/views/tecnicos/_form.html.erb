<%= form_for @tecnico, :html => {:class => "form-horizontal"} do |f| %>
  <% if @tecnico.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h2><%= @tecnico.errors.count %> Errores impidieron que este tecnico se guardara:</h2>
      <ul>
       <% @tecnico.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="row">
    <div class="form-group">
      <%= f.label :nombre, :class => "col-xs-3 control-label" %>
      <div class="col-xs-7">
        <%= f.text_field :nombre, :class => "form-control" , :autofocus => true%>
      </div>
    </div>
  </div>
  <div class="row">
    <br />
    <button type="submit" class="btn btn-default center-block">
      <span class="glyphicon glyphicon-save"></span> Guardar
    </button>
  </div>
<% end %>
